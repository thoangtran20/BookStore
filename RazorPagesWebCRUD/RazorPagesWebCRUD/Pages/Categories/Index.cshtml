@page
@model RazorPagesWebCRUD.Pages.Categories.IndexModel
@{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary text-end">
                <i class="bi bi-plus"></i> Create new Category
            </a>
        </div>
    </div>

    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <th>Category Name</th>
            <th>Display Order</th>
        </thead>

        <tbody>
            @foreach (var obj in Model.categories)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-1">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-1">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }        
        </tbody>
    </table>
</div>