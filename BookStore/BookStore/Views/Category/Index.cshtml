@model IEnumerable<Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus"></i> Create New Category
            </a>
        </div>
    </div>
    <br />
    <br />
    <table class="table table-bordered table-striped">
        <thead>
        <th class="text-white">Category Name</th>
        <th class="text-white">Category Order</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-white">@item.Name</td>
                    <td class="text-white">@item.DisplayOrder</td>
                    <td>
                        <div>
                            <a class="btn btn-primary m-1" asp-controller="Category" asp-action="Edit" asp-route-id=@item.Id>
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a class="btn btn-primary m-1" asp-controller="Category" asp-action="Delete" asp-route-id=@item.Id>
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
